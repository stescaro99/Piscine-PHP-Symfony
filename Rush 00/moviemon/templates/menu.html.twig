{% extends 'base.html.twig' %}

{% block body %}
<div class="menu">

    <img src="{{ asset('images/moviemon.png') }}" width="500" alt="Moviemon">

    <form action="{{ path('new') }}" method="POST" class="form-section">
        <div class="form-group">
            <label for="player_name">👤 Enter Player Name:</label>
            <input type="text" id="player_name" name="player_name" class="styled-input" required>
        </div>

        <div class="form-group">
            <label for="map_size">🗺️ Set Map Size:</label>
             <input type="number" id="map_size" name="map_size" class="styled-input" required min="3" max="11">
        </div>

        <button type="submit" class="menu-btn start">🎮 Start New Game</button>
    </form>

    <div class="menu-buttons">
        {% if fromOverworld %}
            <a href="{{ path('save') }}" class="menu-btn save">💾 Save Game</a>
        {% else %}
            <a href="#" class="menu-btn disabled">💾 Save Game</a>
        {% endif %}

        <a href="{{ path('load') }}" class="menu-btn load">📂 Load Game</a>

        {% if fromOverworld %}
            <a href="{{ path('overworld') }}" class="menu-btn cancel">❌ Cancel</a>
        {% endif %}
    </div>

</div>
{% endblock %}
